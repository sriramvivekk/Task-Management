<div class="column is-half is-offset-one-quarter">

<h1 class= "is-size-1 has-text-centered has-text-weight-bold">You can Sign Up Here</h1>

<div class="box">

<%= form_for @user do |f| %>

  <div class="field">
    <% if @user.errors.any? %>
      <div class="error_mesages">
          <div class="notification is-danger">
            <% @user.errors.full_messages.each do |message| %>
            <p class="notice has-text-centered"><%= message %></p>
            <% end %>
          </div>
      </div>
    <% end %>
  </div>


  <div class="field">
    <label class="label">First Name</label>
    <div class="control">
      <%= f.text_field :first_name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
    <label class="label">Last Name</label>
      <%= f.text_field :last_name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
    <label class="label">Username</label>
      <%= f.text_field :user_name, class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= f.text_field :email, class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <%= f.password_field :password, class: "input" %>
    </div>
  </div>

  <div class="field">
    <label class="label">Password Confirmation</label>
    <div class="control">
      <%= f.password_field :password_confirmation, class: "input" %>
    </div>
  </div>

  <%= f.submit "Sing up", class: "button is-primary" %>

<% end %>
</div>
</div>
